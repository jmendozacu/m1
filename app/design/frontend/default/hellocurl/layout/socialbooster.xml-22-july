<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>css/socialbooster/styles.css</stylesheet></action>
        </reference>
    </default>

	<catalog_product_view>
	    <reference name="product.info">
	        <block type="socialbooster/wrapper" name="socialbooster.product" />
	    </reference>
	    <reference name="product.info.addto">
            <action method="setTemplate"><template>socialbooster/catalog-product-view-addto.phtml</template></action>
        </reference>
	</catalog_product_view>

	<catalog_category_default>
	   <block type="socialbooster/wrapper" name="socialbooster.category" />
	</catalog_category_default>
	
	<catalog_category_layered>
	   <block type="socialbooster/wrapper" name="socialbooster.category" />
	</catalog_category_layered>
	
	<cms_page>
		<reference name="cms.wrapper">
            <block type="socialbooster/wrapper" name="socialbooster.cms"/>
        </reference>
	</cms_page>
</layout>