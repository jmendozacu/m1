 */
?>
<?php $_links = $this->getLinks(); ?>
<?php if (count($_links) > 0): ?>
    <ul<?php if ($this->getName()): ?> id="<?php echo $this->getName() ?>"<?php endif; ?> class="top-links">
        <?php if (Mage::getSingleton('customer/session')->isLoggedIn()): ?>
            <li class="welcome">
                <?php echo $this->__('Welcome, %s!', Mage::getSingleton('customer/session')->getCustomer()->getName()); ?>
            </li> 
        <?php endif; ?>  
        <li class="first"><a href="#" title="Need Help?  Click here for live chat support.  If we are offline, please call us at 877-274-5964 or email us at info@repairzoom.com." onclick="window.open('http://ssl7.net/chat/en/75c40d1cb479006a25131834f0/' + document.location.href, '', 'height=400,width=300,menubar=no, location=no,resizable=yes,scrollbars=no,status=yes');" >Live support</a></li>
        <?php foreach ($_links as $_link): ?>
            <?php if ($_link->getLabel() != ''): ?>
                <li class="first" <?php echo $_link->getLiParams() ?>><?php echo $_link->getBeforeText() ?>
                    <a href="<?php echo $_link->getUrl() ?>" title="<?php echo $_link->getTitle() ?>" <?php echo $_link->getAParams() ?>>
                        <?php echo $_link->getLabel() ?><?php echo $_link->getAfterText() ?>
                    </a>
                </li>
            <?php endif; ?>
        <?php endforeach; ?>			
    </ul>
<?php endif; ?>

