<config>
    <modules>
        <MageWorx_SocialBooster>
            <version>1.0.0</version>
        </MageWorx_SocialBooster>
    </modules>
    
    <frontend>
        <translate>
            <modules>
                <MageWorx_SocialBooster>
                    <files>
                        <default>MageWorx_SocialBooster.csv</default>
                    </files>
                </MageWorx_SocialBooster>
            </modules>
        </translate>
        <layout>
            <updates>
                <socialbooster>
                    <file>socialbooster.xml</file>
                </socialbooster>
            </updates>
        </layout>
    </frontend>
    
    <global>
        <models>
            <socialbooster>
                <class>MageWorx_SocialBooster_Model</class>
            </socialbooster>
        </models>
        <resources>
            <socialbooster_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </socialbooster_write>
            <socialbooster_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </socialbooster_read>
        </resources>
        <blocks>
            <socialbooster>
                <class>MageWorx_SocialBooster_Block</class>
            </socialbooster>
        </blocks>
        <helpers>
            <socialbooster>
                <class>MageWorx_SocialBooster_Helper</class>
            </socialbooster>
        </helpers>
    </global>
    
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mageworx_social_tools translate="title" module="mageworx">
                                        <title>MageWorx &gt; Social Tools</title>
                                        <sort_order>1</sort_order> 
                                            <children>
                                                <socialbooster translate="title" module="socialbooster">
                                                    <title><![CDATA[Social Booster]]></title>
                                                </socialbooster>
                                            </children>
                                        </mageworx_social_tools>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    
    <default>
        <mageworx_social_tools>
            <socialbooster>
                <enabled>1</enabled>
                <bookmarks>scriptstyle,blinklist,delicious,digg,diigo,reddit,stumbleupon,technorati,mixx,myspace,designfloat,facebook,twitter,linkedin,newsvine,devmarks,google,misterwong,izeby,tipd,pfbuzz,friendfeed,blogmarks,fwisp,designmoo,bobrdobr,yandex,memoryru,100zakladok,moemesto,hackernews,printfriendly,designbump,ning,identica,xerpi,wikio,techmeme,sphinn,posterous,globalgrind,pingfm,nujij,ekudos,netvouz,netvibes,fleck,blogospherenews,webblend,wykop,blogengage,hyves,pusha,hatena,mylinkvault,slashdot,squidoo,propeller,faqpal,evernote,meneame,bitacoras,jumptags,bebo,n4g,strands,orkut,tumblr,stumpedia,current,blogger,plurk</bookmarks>
                <featured_bookmarks>digg,stumbleupon,myspace,facebook,twitter</featured_bookmarks>
                <default_position>content</default_position>
                <product_position>short_description</product_position>
                <category_pages_enabled>1</category_pages_enabled>
                <cms_pages_enabled>1</cms_pages_enabled>
                <ignore_cms_pages>no-route,enable-cookies</ignore_cms_pages>
            </socialbooster>
        </mageworx_social_tools>
    </default>
</config>