 */
-->
<config>
    <modules>
        <MageWorx_OrdersSurcharge>
            <version>1.0.1</version>
        </MageWorx_OrdersSurcharge>
    </modules>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MageWorx_OrdersSurcharge after="Mage_Adminhtml">MageWorx_OrdersSurcharge_Adminhtml</MageWorx_OrdersSurcharge>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <frontend>
        <routers>
            <mageworx_orderssurcharge>
                <use>standard</use>
                <args>
                    <module>MageWorx_OrdersSurcharge</module>
                    <frontName>surcharge</frontName>
                </args>
            </mageworx_orderssurcharge>
        </routers>

        <layout>
            <updates>
                <mageworx_orderssurcharge>
                    <file>mageworx_orderssurcharge.xml</file>
                </mageworx_orderssurcharge>
            </updates>
        </layout>

        <translate>
            <modules>
                <MageWorx_OrdersSurcharge>
                    <files>
                        <default>MageWorx_OrdersSurcharge.csv</default>
                    </files>
                </MageWorx_OrdersSurcharge>
            </modules>
        </translate>

        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <mageworx_orderssurcharge_to_html_block_after>
                        <class>mageworx_orderssurcharge/observer</class>
                        <method>toHtmlBlockFrontAfter</method>
                    </mageworx_orderssurcharge_to_html_block_after>
                </observers>
            </core_block_abstract_to_html_after>
            <sales_quote_collect_totals_after>
                <observers>
                    <mageworx_orderssurcharge_disable_fee_check>
                        <class>mageworx_orderssurcharge/observer</class>
                        <method>disableFeeCheck</method>
                    </mageworx_orderssurcharge_disable_fee_check>
                </observers>
            </sales_quote_collect_totals_after>
            <controller_action_layout_load_before>
                <observers>
                    <mageworx_orderssurcharge_hide_cart_blocks>
                        <class>mageworx_orderssurcharge/observer</class>
                        <method>hideCartBlocks</method>
                    </mageworx_orderssurcharge_hide_cart_blocks>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </frontend>

    <global>
        <helpers>
            <mageworx_orderssurcharge>
                <class>MageWorx_OrdersSurcharge_Helper</class>
            </mageworx_orderssurcharge>
        </helpers>

        <models>
            <mageworx_orderssurcharge>
                <class>MageWorx_OrdersSurcharge_Model</class>
                <resourceModel>mageworx_orderssurcharge_resource</resourceModel>
            </mageworx_orderssurcharge>

            <mageworx_orderssurcharge_resource>
                <class>MageWorx_OrdersSurcharge_Model_Resource</class>
                <entities>
                    <surcharge>
                        <table>mageworx_orderssurcharge_surcharge</table>
                    </surcharge>
                </entities>
            </mageworx_orderssurcharge_resource>
        </models>

        <resources>
            <mageworx_orderssurcharge_setup>
                <setup>
                    <module>MageWorx_OrdersSurcharge</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mageworx_orderssurcharge_setup>
            <mageworx_orderssurcharge_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mageworx_orderssurcharge_write>
            <mageworx_orderssurcharge_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mageworx_orderssurcharge_read>
        </resources>

        <blocks>
            <mageworx_orderssurcharge>
                <class>MageWorx_OrdersSurcharge_Block</class>
            </mageworx_orderssurcharge>
        </blocks>

        <events>

            <!-- Quote -->
            <payment_method_is_active>
                <observers>
                    <mageworx_orderssurcharge_activate_payment_method>
                        <class>mageworx_orderssurcharge/observer_quote</class>
                        <method>activatePaymentMethod</method>
                    </mageworx_orderssurcharge_activate_payment_method>
                </observers>
            </payment_method_is_active>
            <sales_quote_save_before>
                <observers>
                    <mageworx_orderssurcharge_disable_mod_cart>
                        <class>mageworx_orderssurcharge/observer_quote</class>
                        <method>checkSurchargeCart</method>
                    </mageworx_orderssurcharge_disable_mod_cart>
                </observers>
            </sales_quote_save_before>

            <!-- Order -->
            <sales_order_save_before>
                <observers>
                    <mageworx_orderssurcharge_check_refund>
                        <class>mageworx_orderssurcharge/observer_order</class>
                        <method>checkRefund</method>
                    </mageworx_orderssurcharge_check_refund>
                    <mageworx_orderssurcharge_change_status>
                        <class>mageworx_orderssurcharge/observer_order</class>
                        <method>changeStatusAfterSurchargeWasPaid</method>
                    </mageworx_orderssurcharge_change_status>
                </observers>
            </sales_order_save_before>
            <sales_order_save_after>
                <observers>
                    <mageworx_orderssurcharge_apply_surcharge_to_parent_order>
                        <class>mageworx_orderssurcharge/observer_order</class>
                        <method>applySurchargeToParentOrder</method>
                    </mageworx_orderssurcharge_apply_surcharge_to_parent_order>
                    <mageworx_orderssurcharge_check_canceled_order>
                        <class>mageworx_orderssurcharge/observer_order</class>
                        <method>checkCancel</method>
                    </mageworx_orderssurcharge_check_canceled_order>
                </observers>
            </sales_order_save_after>
        </events>

        <sales>
            <quote>
                <totals>
                    <surcharge>
                        <class>mageworx_orderssurcharge/surcharge_total_quote</class>
                        <after>tax,discount</after>
                        <before>grand_total</before>
                    </surcharge>
                    <linked>
                        <class>mageworx_orderssurcharge/linked_order_total_quote</class>
                        <after>tax,discount</after>
                        <before>grand_total</before>
                    </linked>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <surcharge>
                        <class>mageworx_orderssurcharge/surcharge_total_invoice</class>
                        <after>tax,discount</after>
                        <before>grand_total</before>
                    </surcharge>
                    <linked>
                        <class>mageworx_orderssurcharge/linked_order_total_invoice</class>
                        <after>tax,discount</after>
                        <before>grand_total</before>
                    </linked>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <surcharge>
                        <class>mageworx_orderssurcharge/surcharge_total_creditmemo</class>
                        <after>tax,discount</after>
                        <before>grand_total</before>
                    </surcharge>
                    <linked>
                        <class>mageworx_orderssurcharge/linked_order_total_creditmemo</class>
                        <after>tax,discount</after>
                        <before>grand_total</before>
                    </linked>
                </totals>
            </order_creditmemo>
        </sales>

        <fieldsets>

            <sales_convert_quote_address>
                <surcharge_amount>
                    <to_order>*</to_order>
                </surcharge_amount>
                <base_surcharge_amount>
                    <to_order>*</to_order>
                </base_surcharge_amount>
                <linked_amount>
                    <to_order>*</to_order>
                </linked_amount>
                <base_linked_amount>
                    <to_order>*</to_order>
                </base_linked_amount>
            </sales_convert_quote_address>

            <sales_convert_quote>
                <surcharge_amount>
                    <to_order>*</to_order>
                </surcharge_amount>
                <base_surcharge_amount>
                    <to_order>*</to_order>
                </base_surcharge_amount>
                <surcharge_id>
                    <to_order>*</to_order>
                </surcharge_id>
                <linked_amount>
                    <to_order>*</to_order>
                </linked_amount>
                <base_linked_amount>
                    <to_order>*</to_order>
                </base_linked_amount>
            </sales_convert_quote>

            <sales_convert_order>
                <surcharge_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </surcharge_amount>
                <base_surcharge_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </base_surcharge_amount>
                <surcharge_id>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </surcharge_id>
                <linked_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </linked_amount>
                <base_linked_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </base_linked_amount>
                <!-- Temporary param to know how much need to be invoiced -->
                <base_linked_amount_to_be_invoiced>
                    <to_invoice>*</to_invoice>
                </base_linked_amount_to_be_invoiced>
            </sales_convert_order>

        </fieldsets>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <mageworx_orderssurcharge>
                    <file>mageworx_orderssurcharge.xml</file>
                </mageworx_orderssurcharge>
            </updates>
        </layout>
        <translate>
            <modules>
                <MageWorx_OrdersSurcharge>
                    <files>
                        <default>MageWorx_OrdersSurcharge.csv</default>
                    </files>
                </MageWorx_OrdersSurcharge>
            </modules>
        </translate>
        <events>
            <!-- Disable edit -->
            <controller_action_predispatch_adminhtml_sales_order_view>
                <observers>
                    <mageworx_is_order_editable>
                        <class>mageworx_orderssurcharge/observer_order</class>
                        <method>checkIsOrderEditable</method>
                    </mageworx_is_order_editable>
                </observers>
            </controller_action_predispatch_adminhtml_sales_order_view>
            <mwoe_apply_data_to_quote_collect_totals_after>
                <observers>
                    <mageworx_add_linked_amount_to_new_quote>
                        <type>singleton</type>
                        <class>mageworx_orderssurcharge/observer_order_edit</class>
                        <method>changeNewQuoteLinkedAmount</method>
                    </mageworx_add_linked_amount_to_new_quote>
                </observers>
            </mwoe_apply_data_to_quote_collect_totals_after>
            <mwoe_render_temp_totals_buttons_html_before>
                <observers>
                    <mageworx_add_create_remove_surcharge_button>
                        <type>singleton</type>
                        <class>mageworx_orderssurcharge/observer_order_edit</class>
                        <method>addSurchargeButton</method>
                    </mageworx_add_create_remove_surcharge_button>
                </observers>
            </mwoe_render_temp_totals_buttons_html_before>
            <mwoe_save_order_after>
                <observers>
                    <mageworx_create_surcharge_for_updated_order>
                        <type>singleton</type>
                        <class>mageworx_orderssurcharge/observer_order_edit</class>
                        <method>createSurcharge</method>
                    </mageworx_create_surcharge_for_updated_order>
                </observers>
            </mwoe_save_order_after>
        </events>
    </adminhtml>

    <default>
        <sales>
            <totals_sort>
                <orders_surcharge>99</orders_surcharge>
                <linked>99</linked>
            </totals_sort>
        </sales>
        <mageworx_ordersmanagement>
            <orderssurcharge>
                <enabled>1</enabled>
            </orderssurcharge>
        </mageworx_ordersmanagement>
    </default>
</config>